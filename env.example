# ===========================================
# Whistle Network Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control!

# ==================
# Common Settings
# ==================

# Solana RPC endpoint (mainnet)
RPC_URL=https://api.mainnet-beta.solana.com

# Program ID (do not change)
PROGRAM_ID=whttByewzTQzAz3VMxnyJHdKsd7AyNRdG2tDHXVTksr

# WHISTLE token mint (do not change)
WHISTLE_MINT=6Hb2xgEhyN9iVVH3cgSxYjfN774ExzgiCftwiWdjpump

# ==================
# Relay Server
# ==================

# Port for relay server
PORT=3480

# Path to authority keypair JSON
AUTHORITY_KEYPAIR=/path/to/authority-keypair.json

# Database path (SQLite)
DATABASE_PATH=./data/whistle.db

# Enable debug logging
DEBUG=false

# ==================
# Node Client
# ==================

# Path to operator keypair JSON
OPERATOR_KEYPAIR=/path/to/operator-keypair.json

# Primary relay WebSocket URL
RELAY_URL=wss://rpc.whistle.ninja

# Backup relay URLs (comma-separated)
BACKUP_RELAYS=wss://us.rpc.whistle.ninja,wss://pl.rpc.whistle.ninja

# Cache node endpoint (your public URL)
NODE_ENDPOINT=https://your-node.example.com

# Bond amount in WHISTLE tokens (minimum 100)
BOND_AMOUNT=100000000

# ==================
# API Server
# ==================

# API server port
API_PORT=3000

# JWT secret for authentication
JWT_SECRET=your-super-secret-jwt-key-change-this

# Rate limiting (requests per minute)
RATE_LIMIT=100

# ==================
# Frontend Apps
# ==================

# API base URL
VITE_API_URL=https://api.whistle.ninja

# RPC URL for frontend
VITE_RPC_URL=https://rpc.whistle.ninja

